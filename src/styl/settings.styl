/**
 *  Settings Global do CSS (Stylus)
 *  - Essas Configurações são chamados em todos arquivos styles
 *  - Não se deve inserir estruturas css, é permitido somente variaves e funções
 */

// Placeholder
$button
  display inline-block
  padding 13px 15px
  border-radius 0
  background rgba(0, 0, 0, 0.5)
  color #fff
  font-weight regular
  font-size 14px

  &:hover
    text-decoration none

// media queries breakpoints
desktop = unquote('screen and (min-width: 992px)')
mobile = unquote('screen and (max-width: 992px)')

// Color
$white = #edf6f9
$main-color = #2b2d42
$main-color-light = #8d99ae
$accent-color = #ef233c
$accent-color-light = #d90429

// transition
$transition = all 0.2s ease-out

// shortcuts
$bxsd = 0 3px 6px rgba(0, 0, 0, 0.16)

// fonts
$main-font = 'Montserrat', sans-serif
$title-font = 'Courier Prime', monospace